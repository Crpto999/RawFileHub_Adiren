{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#00c983",
          "background": "#003543",
          "template": " <#00c983>\uf07b \uea9c</> {{ .Path }} ",
          "properties": {
            "folder_icon": "\uf115",
            "home_icon": "\ueb06",
            "style": "full"
          }
        },
        {
		  "type": "python",
		  "style": "powerline",
		  "powerline_symbol": "\uE0B0",
		  "foreground": "#906cff",
		  "background": "#3e2e6e",
		  "template": "<#ffffff>  </>{{ .Full }} ",
          "properties": {
            "home_enabled": true,
            "fetch_virtual_env": true,
            "display_default":  true
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#8a300c",
          "background": "#FCA17D",
          "template": " ➜ ({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}) ",
          "properties": {
            "branch_icon": " <#8a300c>\ue0a0 </>",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#49e6d3",
          "background": "#039685",
          "template": " <#ffffff>\ue718</> {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} "
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#ffffff",
          "background": "#83769c",
          "template": " \ueba2 {{ .FormattedMs }} ",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "status",
          "style": "diamond",
          "powerline_symbol": "\ue0b0",
          "foreground": "#ffffff",
          "background": "#206ee3",
          "background_templates": [
            "{{ if gt .Code 0 }}red{{ end }}"
          ],
          "trailing_diamond": "\ue0b4",
          "template": " {{ if gt .Code 0 }}\uf421{{ else }}\uf469{{ end }} ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#cd5e42",
          "template": "\ue3bf "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#CD4277",
          "template": " <#45F1C2><b>⚡</b></><b>{{ .UserName }}</b> <#247cd4>></><#ffffff>></><#f73b3b>></>"
        }
      ],
      "newline": true
    }
  ]
}
